<h1>Listing casts</h1>

<table>
  <tr>
    <th>Beer</th>
    <th>Size</th>
    <th>Measurement</th>
    <th>Cost</th>
    <th>Available</th>
    <th>Tapped</th>
  </tr>

<% @casts.each do |cast| %>
  <tr>
    <td><%=h cast.beer %></td>
    <td><%=h cast.size %></td>
    <td><%=h cast.measurement %></td>
    <td><%=h cast.cost %></td>
    <td><%=h cast.available %></td>
    <td><%=h cast.tapped %></td>
    <td><%= link_to 'Show', cast %></td>
    <td><%= link_to 'Edit', edit_cast_path(cast) %></td>
    <td><%= link_to 'Destroy', cast, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New cast', new_cast_path %>